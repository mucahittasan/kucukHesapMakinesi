
package javaEgitim.Projeler;

import java.util.Scanner;

public class HesapMakinesiProje {
	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);

		double sayi1, sayi2, secim;

		System.out.println("İlk sayıyı giriniz :");
		sayi1 = scan.nextDouble();
		System.out.println("İkinci sayıyı giriniz :");
		sayi2 = scan.nextDouble();

		System.out.println("\nLütfen yapmak istediğiniz işlemi seçiniz : ");
		System.out.println("1-Toplama \n2-Çıkarma \n3-Çarpma \n4-Bölme");
		System.out.print("Seçiminiz :");
		secim = scan.nextDouble();

		if (secim == 1) {
			System.out.println("Sonuç :" + (sayi1 + sayi2));
		} else if (secim == 2) {
			System.out.println("Sonuç :" + (sayi1 - sayi2));
		} else if (secim == 3) {
			System.out.println("Sonuç :" + (sayi1 * sayi2));
		} else if (secim == 4) {
			System.out.println("Sonuç :" + (sayi1 / sayi2));
		} else {
			System.out.println("Yanlış deger girdiniz!");
		}

	}
}
